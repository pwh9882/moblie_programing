<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.RoutineCreateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_routine_detail_create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Routine Name -->
            <TextView
                android:id="@+id/tv_routine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routine Name" />

            <EditText
                android:id="@+id/et_routine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Routine Start Time -->
            <TextView
                android:id="@+id/tv_routine_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routine Start Time" />

            <EditText
                android:id="@+id/et_routine_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Routine Description -->
            <TextView
                android:id="@+id/tv_routine_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routine Description" />

            <EditText
                android:id="@+id/et_routine_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_routine_detail_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Create Routine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
