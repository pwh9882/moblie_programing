<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.RoutineProgressActivity">
    <data>
        <variable
            name="routineProgressViewModel"
            type="com.example.mobile_programing.viewModel.RoutineProgressViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="루틴명"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전체타이머"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_routine_progress_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="34sp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fl_routine_progress"
            android:name="com.example.mobile_programing.views.fragments.CardDisplayFragment"
            android:layout_width="416dp"
            android:layout_height="438dp" />

        <Button
            android:id="@+id/btn_routine_progress_create_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="새 카드" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="134dp"
        android:gravity="center"
        android:orientation="horizontal"


        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_routine_progress_previous_card"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:background="@drawable/custom_prev_icon" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="37dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_stop_icon" />

        <ImageButton
            android:id="@+id/btn_routine_progress_next_card"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:background="@drawable/custom_next_icon" />

        <ImageButton
            android:id="@+id/btn_routine_progress_skip_card"
            android:layout_width="62dp"
            android:layout_height="54dp"
            android:background="@drawable/custom_skip_icon" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>